<!--folders.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/stylesheets/folders.css">
  <title>Folders</title>
</head>
<body>
  <h1>Your folders</h1>

  <% if (folders.length > 0) { %>
    <ul>
      <% folders.forEach(folder => { %>
        <li>
          <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
          <form action="/folders/<%= folder.id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this folder?');">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No folders available. <a href="/createFolder">Create one</a></p>
  <% } %>

  <a href="/">Home</a>
</body>
</html>